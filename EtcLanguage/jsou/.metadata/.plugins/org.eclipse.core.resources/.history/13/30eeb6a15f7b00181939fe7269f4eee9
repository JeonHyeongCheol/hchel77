package pack1;

import java.util.Scanner;

public class Test9for {

	public static void main(String[] args) {
	
		
		// 문4 : *********
		//		 *******
		//		  *****
		//		   *** 
		//          *
		for(int i = 5; i >= 1; i-- ) {
			for(int p = 0 ; p < 5-i ; p++ ) {
				System.out.print(" ");
			}	
			for(int j = 1 ; j <= (i*2)-1 ; j-- ) {
					System.out.print("*");
			}
			System.out.println();
		}
		

		
		System.out.println("\n프로그램 종료");
	}

}
