package pack1;

import java.util.Scanner;

public class Test9for {

	public static void main(String[] args) {
	
		
		// 문4 : *********
		//		 *******
		//		  *****
		//		   *** 
		//          *
		for(int i = 1; i <= 5; i ++ ) {
			for(int p = 0 ; p < 5 - i ; p++ ) {
				System.out.print(" ");
			}	
			for(int j = 1 ; j <= (i*2)-1 ; j+=1 ) {
					System.out.print("*");
			}
			System.out.println();
		}
		

		// 문5 : 4번을 뒤집어서 출력
		for(int i = 1; i <= 5; i ++ ) {
			for(int p = 0 ; p < 5-i ; p++ ) {
				System.out.print(" ");
			}	
			for(int j = 1 ; j <= (i*2)-1 ; j+=1 ) {
					System.out.print("*");
			}
			System.out.println();
		}
		
		
		System.out.println("\n프로그램 종료");
	}

}
