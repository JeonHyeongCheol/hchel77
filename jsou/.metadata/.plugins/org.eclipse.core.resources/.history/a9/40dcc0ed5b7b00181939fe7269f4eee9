package pack1;

import java.util.Scanner;

public class Test9for {

	public static void main(String[] args) {
	
		
		// 문4 : *********
		//		 *******
		//		  *****
		//		   *** 
		//          *
		for(int i = 1; i <= 5; i += 1 ) {
			for(int p = i*2 ; i < p ; p +=2 ) {
				System.out.print(" ");
			}	
			for(int j = i*5 ; i < j ; j-=2 ) {
					System.out.print("*");
			}
			System.out.println();
		}
		

		// 문5 : 4번을 뒤집어서 출력

		
		System.out.println("\n프로그램 종료");
	}

}
